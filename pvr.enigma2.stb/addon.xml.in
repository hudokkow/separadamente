<?xml version="1.0" encoding="UTF-8"?>
<addon
  id="pvr.enigma2.stb"
  version="0.0.1"
  name="Enigma2 STB Client"
  provider-name="Cristiano A. Silva">
  <requires>
    <c-pluff version="0.1"/>
    <import addon="xbmc.pvr" version="5.1.0"/>
  </requires>
  <extension
    point="xbmc.pvrclient"
    library_@PLATFORM@="@LIBRARY_FILENAME@"/>
